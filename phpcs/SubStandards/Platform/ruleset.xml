<?xml version="1.0"?>
<!-- PHP_CodeSniffer standard for NextEuropa subsites. -->
<!-- See http://pear.php.net/manual/en/package.php.php-codesniffer.annotated-ruleset.php -->
<ruleset name="Platform">

    <description>Drupal coding standard for NextEuropa Platform</description>

    <!-- Subsite ruleset is extended on QA Ruleset. -->
    <rule ref="../QA/ruleset.xml" />

    <!-- Exceptions for the platform -->
    <rule ref="QualityAssurance">
        <exclude name="QualityAssurance.InfoFiles.Required.MultisiteVersion" />
        <exclude name="QualityAssurance.InfoFiles.Required.PHP" />
        <exclude name="QualityAssurance.InfoFiles.Forbidden.TagsTaxonomy" />
        <exclude name="QualityAssurance.InfoFiles.Forbidden.MenuDependency" />
        <exclude name="QualityAssurance.FeaturesFiles.ForbiddenPermissions.Permissions" />
    </rule>

</ruleset>
